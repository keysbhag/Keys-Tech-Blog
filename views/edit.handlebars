<div class="row mt-4">
  <div class="row">
    <h3>Update Post:</h3>

    <form class="form edit-post-form">
      <div class="form-group">
        <label for="post-title">Title</label>
        <input class="form-input" type="text" id="post-title" name="post-title" value="{{title}}" />
      </div>
      <div class="form-group">
        <label for="post-content">content:</label>
        <textarea class="form-input" id="post-content" name="post-content">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary"  data-id={{id}} id="edit-post">Update</button>
      </div>
    </form>
  </div>

<script src="../js/edit.js"></script>